    <GetDetails dest="8">
        <RegExp output="user-agent=Mozilla%2F5.0%20%28Windows%20NT%206.1%3B%20Win64%3B%20x64%29%20AppleWebKit%2F537.36%20%28KHTML%2C%20like%20Gecko%29%20Chrome%2F78.0.3904.97%20Safari%2F537.36" dest="10"><expression/></RegExp>
        <RegExp input="$$6" output="&lt;details>\1&lt;/details>" dest="8">

            <!-- Title !-->
            <RegExp input="$$1" output="&lt;title>\1&lt;/title>" dest="6">
                <expression trim="1" noclean="1">&lt;h1 itemprop=&quot;name&quot;>(.[^&lt;]*)&lt;/h1></expression>
            </RegExp>
            <!-- Original Title !-->
            <RegExp input="$$1" output="&lt;originaltitle>\4&lt;/originaltitle>" dest="6+">
                <expression trim="4">&lt;ul class="film-names">(.[^&lt;]*)&lt;li(.[^&lt;]*)&lt;img(.[^>]*)>(.[^&lt;]*)</expression>
            </RegExp>
            <!-- Year !-->
            <RegExp input="$$1" output="&lt;year>\1&lt;/year>" dest="6+">
                <expression trim="1">&lt;span itemprop="dateCreated">(.[^&lt;]*)&lt;/span></expression>
            </RegExp>
            <!-- Directors !-->
            <RegExp input="$$7" output="&lt;director>\2&lt;/director>" dest="6+">
                <RegExp input="$$1" output="\1" dest="7">
                    <expression noclean="1" trim="1">(&lt;span itemprop="director">((.[^&lt;]*)&lt;a(.[^>]*)>(.[^&lt;]*)&lt;/a>(.[^&lt;]*))*&lt;/span>)</expression>
                </RegExp>
                <expression repeat="yes" trim="2">&lt;a(.[^>]*)>(.[^&lt;]*)</expression>
            </RegExp>
            <!-- Thumbnail !-->
<!--
            <RegExp input="$$1" output="&lt;thumb&gt;https:\3&lt;/thumb&gt;" dest="6+">
                <expression>&lt;div class=&quot;film-posters&quot;&gt;(.[^&lt;]*)&lt;a(.[^&lt;]*)&lt;img itemprop=&quot;image&quot; src=&quot;(.[^&quot;]*)&quot;</expression>
            </RegExp>
-->
            <!-- Thumbnail2 !-->
            <RegExp input="$$1" output="&lt;thumb&gt;https:\5&lt;/thumb&gt;" dest="6+">
                <expression>&lt;picture&gt;((.[^&lt;]*)&lt;source(.[^&gt;]*)&gt;)*(.[^&lt;]*)&lt;img src=&quot;(.[^&quot;]*)&quot;</expression>
            </RegExp>
            <!-- Rating !-->
            <RegExp input="$$1" output="&lt;rating max=&quot;100&quot;>\1&lt;/rating>" dest="6+">
                <expression trim="1">&lt;div class="rating-average">([0-9]+)%&lt;/div></expression>
            </RegExp>
            <!-- Actors !-->
            <RegExp input="$$7" output="&lt;actor>&lt;name>\2&lt;/name>&lt;/actor>" dest="6+">
                <RegExp input="$$1" output="\2" dest="7">
                    <expression trim="1" noclean="2">&lt;h4>Hrají: &lt;/h4>(.[^&lt;]*)(&lt;span(.[^>]*)>((.[^&lt;]*)&lt;a(.[^>]*)>(.[^&lt;]*)&lt;/a>(.[^&lt;]*))*&lt;/span>)</expression>
                </RegExp>
                <expression repeat="yes" trim="2">&lt;a(.[^>]*)>(.[^&lt;]*)</expression>
            </RegExp>

            <expression noclean="1" />
        </RegExp>
    </GetDetails>

